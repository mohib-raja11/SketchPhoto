<resources>
    <!-- Base application theme. -->
    <style name="Theme.SketchPhoto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="appButtonStyle" >

        <item name="background">@color/btn_bg_color</item>


    </style>

    <style name="appImageButtonStyle" >

        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">7dp</item>


    </style>
</resources>